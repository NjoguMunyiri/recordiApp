<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.james.recordiapp.login"
    android:background="@drawable/knob2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/txtusernamelgn"
        android:hint="Username"
        android:background="#808080"
        android:autoText="false"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtpasslgn"
        android:layout_below="@+id/txtusernamelgn"
        android:layout_alignEnd="@+id/txtusernamelgn"
        android:layout_marginTop="106dp"
        android:layout_alignStart="@+id/txtusernamelgn"
        android:background="#808080"
        android:hint="Password" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/btnlogin"
        android:layout_below="@+id/txtpasslgn"
        android:layout_alignEnd="@+id/txtpasslgn"
        android:layout_marginTop="102dp"
        android:layout_toEndOf="@+id/textView" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/btnregister"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/txtpasslgn"
        android:layout_marginBottom="44dp"
        android:layout_alignEnd="@+id/btnlogin" />
</RelativeLayout>
